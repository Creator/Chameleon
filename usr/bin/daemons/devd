local libd = loadfile('/usr/lib/libdev.lua')()
local libp = loadfile('/usr/lib/libprog.lua')()

libp.daemonize()
	:addEvent('init', function()
		if fs.exists('/usr/dev') then
			fs.delete('/usr/dev')
		end
		libd.populate()
	end)
	:addEvent('peripheral', function(ev, sid)
		libd.register(peripheral.getType(sid), sid)
	end)
	:addEvent('peripheral_detach', function(ev, sid)
		libd.unregister(peripheral.getType(sid), sid)
	end)
	:addEvent('cleanup', function() fs.delete('/usr/dev') end)
	:addEvent('ipc', function(ev, tar, req, name)
		if tar == 'devd' then
			if req == 'unreg' then
				coroutine.fire('peripheral_detach', name)
			elseif req == 'register' then
				coroutine.fire('peripheral', name)
			end
		end
	end)
	:run(...)
