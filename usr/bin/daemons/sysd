preset = [[{
  ["events"] = "%s",
  ["handler"] = "%s"
}]]

programs.daemonize()
  :addEvent('unit_enable', function(event, unit, eve)
    local x = fs.open('/usr/etc/sysw.d/'..unit..'.conf', 'w')
    x.writeLine(preset:format(eve, unit))
    x.close()
  )
  :addEvent('unit_disable', function(event, unit)
    fs.delete('/usr/etc/sysw.d/'..unit..'.conf')
  end)
  :addEvent('unit_start', function(event, unit, data)
    if system.config then
      for k, v in pairs(system.config) do
        if v.handler == unit then
          sexec(v.handler, unpack(data))
        end
      end
    end
  end)
  :addEvent('unit_stop', function() end)
  :run(...)
