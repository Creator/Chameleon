local version = "1.0-alpha"

local libnet = _G.libnet
local Args = {...}

-- setup the interfaces (make sure)
libnet.registerInterface()


--[[
  HOWTO:

  invoke: netctl <dev> options

  i.e netctl top set ip 192.168.1.1
]]

if Args[2] == "set" then
  if Args[3] == "ip" then
    if Args[4] ~= nil then
      libnet.inf[Args[1]].ip = Args[3]
    else
      error("no ip provided")
    end
  else if Args[3] == "gateway" then
    if Args[4] ~= nil then
      libnet.inf[Args[1]].gateway = Args[3]
    else
      error("no gateway provided")
    end
  end
elseif Args[1] == "-v" then
  print(version)
end
