local version = "1.0-alpha"

local libnet = _G.libnet
local libprog = require("libprog")
local Args = {...}

-- check the arguments
if Args[1] == "-v" then
  print(version)
  return
end

local ip = Args[1]

-- bind our event handlers
libprog.create()
  :add(function()
    print(ip)
  end)
  :start()
